#!/usr/bin/env ruby

require 'yaml'
require 'key_diff'

ARGV.inject{ |a, b|
  extract = lambda{ |path| YAML.load(File.read(path))[File.basename(path).split('.')[0]] }
  diffed = KeyDiff.diff( extract[a], extract[b] )

  [a, b].zip(diffed).each{ |path_result|
    path, result = path_result
    puts "#{path} is missing:"
    puts result.join("\n")
    puts
  }

  b
}
